# ============================================
# DB Manager AI Server (Docker / Production)
# ============================================
# Copy to .env and set values. Used by docker-compose.

NODE_ENV=production
PORT=5000

# OpenRouter (required for AI features)
# Get your key at https://openrouter.ai/keys
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-4o-mini

# Security (optional; defaults shown)
# CORS: allowed origins, comma-separated, or * for all
CORS_ORIGIN=*
# Rate limit: requests per window per IP
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
# Max JSON body size (e.g. 1mb, 500kb)
BODY_LIMIT=1mb
